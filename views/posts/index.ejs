<h2>Below is a collection of dreams from people all around the world.</h2>

<div id="container">
  <% allPosts.reverse(); %>
  <% allPosts.forEach(function(post,index){ %>
  <div class= "content">
    <h2><%= post.title%></h2>
    <h4><%= post.body %></h4>
    <p class = "dateStamp"><%= post.createdAt %> by <a href="/oneironaut/<%= post.User.id%>/dreams"><%= post.User.username %></a> </p>
  </div>

  <% }) %>
</div>

