<% include ../partials/navbar %>
<% include ../partials/header %>
<body>
<div class ="container">


<h2 class="first">“There is nothing like a dream to create the future.”  </h2><h4 class="first"> -Victor Hugo <i> Les Misérables</i></h4>
<div class ="new_post">
<br>
<% if(typeof errMsg !== 'undefined'){ %>
<h3 style="color:red;"><%= errMsg %></h3>
<% } %>

<form action="/dreams" method="post">
    <p> 
      <label for="title">Title</label><br>
        <input type ="text" name="post[title]" id="title" value = "<%= title%>" autofocus>
    </p>
    <p>
      <label for="body">Body</label><br><textarea rows="4" cols="125" name="post[body]" id="body" value="<%= body%>"></textarea>
    </p>

<div class = "tagging" style= "text-align: center;">
  <div class="dreamtype"><input type="radio" name="post[tag]" value="1" id="tag"> Wild</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="2" id="tag"> Whimsical</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="3" id="tag"> Strange</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="4" id="tag"> Realistic</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="5" id="tag"> Sorrowful</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="6" id="tag"> Dark</div>
  <div class="dreamtype"><input type="radio" name="post[tag]" value="7" id="tag"> Prophetic</div>
</div>
<br>

  <p class= "bottomButtons">
  <label class="private">

      <input type="checkbox" id="private" name="post[priv]">
       Make Private  
  </label>
    <input type="submit" value="Save" class ="btn">
  </p>

</form>

</div>
<% include ../partials/footer %>
